{
  "global": {
    "auto_scaling_group": {
      "min_count": 1,
      "max_count": 2
    },
    "isactive_support": {
      "enabled": true,
      "file": "/opt/package-deals/active.txt"
    },
    "instances": {
      "subnet_purpose": "app",
      "ports": [
        {
          "port": "22",
          "protocol": "tcp",
          "visibility": "internal"
        },
        {
          "port": "8443",
          "protocol": "https",
          "visibility": "internal"
        },
        {
          "port": "8080",
          "protocol": "http",
          "visibility": "internal"
        }
      ]
    },
    "loadbalancer": {
      "scheme": "internet-facing",
      "https_enabled": true,
      "http_enabled": false ,
      "timeout": 60,
      "connection_draining": true,
      "connection_draining_timeout": 60,
      "health_check": {
        "instance_port": 8443,
        "ping_path": "/isActive",
        "unhealthy_threshold": 10,
        "healthy_threshold": 3,
        "ping_protocol": "HTTPS",
        "interval": 15,
        "timeout": 5,
        "max_attempts": 120
      },
      "timeout": 300,
      "listeners": [
        {
          "instance_protocol": "https",
          "instance_port": 8443,
          "lb_port": 443,
          "lb_protocol": "https",
          "instance_visibility": "internal",
          "lb_visibility": "ei-internal",
          "ssl_negotiation_policy": "ELBSecurityPolicy-TLS-1-2-2017-01"
        }
      ]
    }
  },
  "test": {
    "loadbalancer": {
      "elb_sticky_policy": {
        "name": "ewetest-sticky-session-policy",
        "timeout": 1800
      }
    }
  }
}
